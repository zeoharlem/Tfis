<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:background="@color/background_color"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/purposeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:text="Consultation with StackFlow"
        android:textColor="@color/textGreen"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/datePurposeAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purposeTitle"
        android:layout_marginTop="-1dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:text="January 20, 2019 09:10 AM"
        android:textColor="#bbb"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        style="@style/calculatorStyle"
        android:layout_marginEnd="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/priceTagAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="1,200.00"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>