<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageV1"
        android:layout_width="165dp"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/third_slide_logo" />

    <TextView
        android:id="@+id/moremiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageV1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="Safety Assurance"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/todaysWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moremiTitle"
        android:textColor="@color/calculatorBtn"
        android:layout_centerHorizontal="true"
        android:text="Get Arrival Notifications" />

</RelativeLayout>